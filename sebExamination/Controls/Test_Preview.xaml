<UserControl x:Class="sebExamination.Controls.Test_Preview"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:sebExamination.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
            <Grid Height="600">
                <StackPanel Orientation="Vertical">
                    <Grid Height="80">
                        <TextBlock x:Name="TestName" FontSize="42"
                                   Foreground="#C02424"
                                   FontFamily="Cambria"
                                   FontWeight="Medium" HorizontalAlignment="Left" Width="1001"
                                   Text="{Binding Content, ElementName=test1}">
                        </TextBlock>

                        <ToggleButton Style="{DynamicResource ToggleButtonStyle}" x:Name="settingTestBtn"
                                              Click="settingTestBtn_Click"
                                              Margin="0,10,10,10"
                                              Width="70"
                                              BorderThickness="0"
                                              Background="White"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Top">
                            <Grid>
                                <Image Source="\Assets\Image\settings.png"
                                               Margin="0,0,20,0"/>
                                <Image Source="\Assets\Image\arrowRed.png"
                                               Margin="55 0 0 0"/>
                            </Grid>
                        </ToggleButton>
                    </Grid>
                    <Grid Height="100">
                        <TextBlock Text="Time limit: 1 hour" 
                                               FontFamily="Times New Roman" 
                                               FontSize="22"
                                               Height="40"
                                               Width="180"
                                               HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               Margin="0,10,125,0">

                        </TextBlock>
                            <TextBlock Text="Grading method: Last attempt" 
                                                   FontFamily="Times New Roman" 
                                                   FontSize="22"
                                                   Height="40"
                                                   Width="280"
                                                   HorizontalAlignment="Right"
                                                   VerticalAlignment="Top"
                                                   Margin="0,50,75,0">

                        </TextBlock>
                    </Grid>
                    <Grid Height="100">
                        <TextBlock
                                           FontSize="42"
                                           Foreground="#C02424"
                                           FontFamily="Cambria"
                                           FontWeight="Medium" Width="1001"
                                           HorizontalAlignment="Left">
                                    Summary of yout previous attempts
                        </TextBlock>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
                        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="#FF459FC6">
                        </Border>
                        <Border Grid.Row="1" Grid.ColumnSpan="2" Background="#FFE0E6E6">
                        </Border>
                        <TextBlock Grid.Row="0"
                                               Grid.Column="0"
                                               Text="Attempt"
                                               Foreground="White"
                                               FontSize="20"
                                               HorizontalAlignment="Center">
                        </TextBlock>
                        <TextBlock Grid.Row="0"
                                               Grid.Column="1"
                                               Text="State"
                                               Foreground="White"
                                               FontSize="20"
                                               HorizontalAlignment="Left">
                        </TextBlock>
                        <TextBlock Grid.Row="1"
                                               Grid.Column="0"
                                               Text="Preview"
                                               Foreground="Black"
                                               FontSize="20"
                                               HorizontalAlignment="Center">
                        </TextBlock>
                        <TextBlock Grid.Row="1"
                                               Grid.Column="1"
                                               Text="Nerver submitted"
                                               Foreground="Black"
                                               FontSize="20"
                                               HorizontalAlignment="Left">
                        </TextBlock>
                    </Grid>
                    <Grid Height="100">
                        <ToggleButton Style="{DynamicResource ToggleButtonStyle}" 
                                          x:Name="PreviewQuiz" 
                                          Background="#0073A5"
                                          Width="250"
                                          HorizontalAlignment="Right"
                                          Height="50"
                                          Margin="0,0,20,0">
                            <TextBlock FontSize="24"
                                           Foreground="white" FontFamily="cambria">
                                                PREVIEW QUIZ NOW
                            </TextBlock>
                        </ToggleButton>
                    </Grid>
                </StackPanel>
            </Grid>

</UserControl>
